        <!-- page content -->
        <div class="right_col" role="main">
            <h2>Registration Form</h2>
            <hr/>
            <div class="clearfix"></div>
            <!-- start form for validation -->
            <form id="demo-form" data-parsley-validate action="register_employee" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <label for="empid">Employee ID: *</label>
                        <input id="empid" name="empid" type="text" class="form-control" maxlength="8"
                               placeholder="Employee ID" required=""/>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="rolelist">Role: *</label>
                        <select class="form-control" id="rolelist" name="role">
                            <option>Director</option>
                            <option>Manager</option>
                            <option>Admin</option>
                            <option>Employee</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-bottom: 10px">
                    <div class="col-md-6">
                        <label for="firstname">First Name: *</label>
                        <input id="firstname" name="firstname" type="text" class="form-control" placeholder="Name"
                               required=""/>
                    </div>
                    <div class="col-md-6">
                        <label for="lastname">Last Name: *</label>
                        <input id="lastname" name="lastname" type="text" class="form-control" placeholder="Surname"
                               required=""/>
                    </div>
                </div>
                <div class="row" style="margin-bottom: 10px">
                    <div class="form-group col-md-6">
                        <label for="email">Email: *</label>
                        <input id="email" name="email" type="email" class="form-control" placeholder="Email"
                               required=""/>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Contact Number: *</label>
                        <input type="text" name="contactnumber" class="form-control"
                               data-inputmask="'mask' : '(999) 999 - 9999'" data-parsley-trigger="change" required/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="positionlist">Position: *</label>
                        <select class="form-control" id="positionlist" name="positionlist">
                            <option>Director</option>
                            <option>Associate Director</option>
                            <option>Senior Manager</option>
                            <option>Manager</option>
                            <option>Assistant Manager</option>
                            <option>Supervisor</option>
                            <option>Senior Analyst</option>
                            <option>Analyst</option>
                            <option>Junior Analyst 2</option>
                            <option>Junior Analyst 1</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="emplength">Employment Length (in years): *</label>
                        <input id="emplength" name="emplength" type="number" class="form-control"
                               placeholder="Employment Length" required=""/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="scrollable">
                            <label class="control-label">Past Projects: *</label><br/>
                            <select id="pastprojects" name="pastprojects" class="form-control select-test" style="width: 100%;" multiple>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Skill Tags: *</label>
                        <select name="skills" class="form-control select-test" style="width: 100%;" multiple>
                            <optgroup label="Cyber Security">
                                <option value="Penetration Testing and Vulnerability">Penetration Testing &amp; Vulnerability</option>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>KPMG | Register</title>

        <!-- Favicon -->
        <%- include('favicon'); %>

        <!-- Stylesheets -->
        <!-- Bootstrap -->
        <link href="vendors/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet">
        <!-- Font Awesome -->
        <link href="vendors/font-awesome/css/font-awesome.min.css" type="text/css" rel="stylesheet">
        <!-- NProgress: Top load animation-->
        <link href="vendors/nprogress/nprogress.css" type="text/css" rel="stylesheet">
        <!-- Bootstrap Multi-select-->
        <link href="vendors/bootstrap-multiselect/dist/css/bootstrap-multiselect.css" type="text/css" rel="stylesheet"/>
        <!-- Code 9-->
        <link href="vendors/Code-9/css/code9.css" type="text/css" rel="stylesheet"/>
        <!-- Custom Theme Style -->
        <link href="stylesheets/custom.min.css" type="text/css" rel="stylesheet"/>

    </head>
    <body class="nav-md">
        <div class="container body">
            <div class="main_container">
                <!-- Sidebar -->
                <%- include('sidebar'); %>

                <!-- top navigation -->
                <%- include('top_nav'); %>
                <!-- /top navigation -->

                <!-- page content -->
                <div class="right_col" role="main">
                    <h2>Registration Form</h2>
                    <hr/>
                    <div class="clearfix"></div>
                    <!-- start form for validation -->
                    <form id="demo-form" data-parsley-validate action="register_employee" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="empid">Employee ID: *</label>
                                <input id="empid" name="empid" type="text" class="form-control" maxlength="8" placeholder="Employee ID" required="" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="rolelist">Role: *</label>
                                <select class="form-control" id="rolelist" name="role">
                                    <option>Employee</option>
                                    <option>Manager</option>
                                    <option>Admin</option>
                                </select>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px">
                            <div class="col-md-6">
                                <label for="firstname">First Name: *</label>
                                <input id="firstname" name="firstname" type="text" class="form-control" placeholder="Name" required="" />
                            </div>
                            <div class="col-md-6">
                                <label for="lastname">Last Name: *</label>
                                <input id="lastname" name="lastname" type="text" class="form-control" placeholder="Surname" required="" />
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 10px">
                            <div class="form-group col-md-6">
                                <label for="email">Email: *</label>
                                <input id="email" name="email" type="email" class="form-control" placeholder="Email" required="" />
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label">Contact Number: *</label>
                                <input type="text" name="contactnumber" class="form-control" data-inputmask="'mask' : '(999) 999 - 9999'" data-parsley-trigger="change" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="positionlist">Position: *</label>
                                <select class="form-control" id="positionlist" name="positionlist">
                                    <option>Senior Analyst</option>
                                    <option>Junior Analyst</option>
                                    <option>Senior Auditor</option>
                                    <option>Junior Auditor</option>
                                    <option>Accountant</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="emplength">Employment Length (in years): *</label>
                                <input id="emplength" name="emplength" type="number" class="form-control" placeholder="Employment Length" required="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <div class="scrollable">
                                    <label class="control-label">Past Projects: *</label><br/>
                                    <select id="pastprojects" name="pastprojects" class="multiselect-ui form-control" multiple="multiple">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label">Skill Tags: *</label>
                                <input id="tags_1" name="skills" type="text" class="tags form-control" value="MS Office, Accounting Skills, Auditor" data-parsley-trigger="change" required  />
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="pull-left">
                            <input class="btn btn-dark submit" type="submit" value="Submit"/>
                        </div>
                    </form>
                    <!-- end form for validations -->
                </div>
                <!-- /page content -->

                <!-- footer content -->
                <footer>
                    <div class="pull-right">
                        Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
                    </div>
                    <div class="clearfix"></div>
                </footer>
                <!-- /footer content -->
            </div>
        </div>

        <!-- jQuery -->
        <script type="text/javascript" src="vendors/jquery/dist/jquery.min.js"></script>
        <!-- jQuery UI -->
        <script type="text/javascript" src="vendors/jquery-ui-1.12.1/jquery-ui.min.js"></script>
        <!-- jQuery Tags Input -->
        <script type="text/javascript" src="vendors/jquery.tagsinput/src/jquery.tagsinput.js"></script>
        <!-- jquery.inputmask -->
        <script type="text/javascript" src="vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>
        <!-- Bootstrap -->
        <script type="text/javascript" src="vendors/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- Bootstrap Multi-Select-->
        <script type="text/javascript" src="vendors/bootstrap-multiselect/dist/js/bootstrap-multiselect.js"></script>
        <!-- Code 9 -->
        <script type="text/javascript" src="vendors/Code-9/js/code9.js"></script>
        <script type="text/javascript" src="vendors/Code-9/js/fullscreen.js"></script>
        <script type="text/javascript" src="vendors/Code-9/views/admin.js"></script>
        <!-- FastClick: Increase load time-->
        <script type="text/javascript" src="vendors/fastclick/lib/fastclick.js"></script>
        <!-- NProgress: Top load animation-->
        <script type="text/javascript" src="vendors/nprogress/nprogress.js"></script>
        <!-- Parsley -->
        <script type="text/javascript" src="vendors/parsleyjs/dist/parsley.min.js"></script>
        <!-- Custom Theme Scripts -->
        <script type="text/javascript" src="javascripts/custom.js"></script>
    </body>
</html>

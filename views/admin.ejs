                                <option value="Review It Policies and Procedures">Review It Policies & Procedures</option>
                                <option value="Development of IT Strategies">Development of IT Strategies</option>
                                <option value="Value IT Analysis and Reviews">Value IT Analysis & Reviews</option>
                                <option value="It Governance Audits">IT Governance Audits</option>
                                <option value="King 3 Assessments">King 3 Assessments</option>
                                <option value="It Governance Maturity Reviews">IT Governance Maturity Reviews</option>
                                <option value="Vendor Selection Assistance">Vendor Selection Assistance</option>
                                <option value="It Project Assurance and Business Req Review">IT Project Assurance & Business Req Review</option>
                                <option value="Disaster Recovery Test Assist and Reviews">Disaster Recovery Test Assist & Reviews</option>
                                <option value="Project Management">Project Management</option>
                            </optgroup>

                        </select>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="pull-left">
                    <input class="btn btn-dark submit" type="submit" value="Submit"/>

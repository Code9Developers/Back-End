        <!-- page content -->
        <div class="right_col" role="main">
            <div class="title_left">
                <h3>New Project
                    <small>Create a new project</small>
                </h3>
            </div>

            <hr/>

            <div class="clearfix"></div>
            <!-- start form for validation -->
            <form id="demo-form" data-parsley-validate action="project_creation" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <label for="projectname">Project Name: *</label>
                        <input type="text" id="projectname" class="form-control" name="projectname" required/>
                    </div>

                    <div class="col-md-6">
                        <label>Project Date: *</label>
                        <br/>
                        <div class="col-md-5">
                            <label>Start Date: *</label>
                            <input id="start_date" name="start_date" class="form-control" type="date" required/>
                        </div>

                        <div class="col-md-5 col-md-offset-1">
                            <label>End Date: *</label>
                            <input id="end_date" name="end_date" class="form-control" type="date" required/>
                        </div>
                    </div>
                </div>

                <br/>
                <div class="row">
                    <div class="col-md-6">
                        <label for="projectdescription">Project Description (minimum of 20 characters, max of 150) :
                            *</label>
                        <textarea id="projectdescription" rows="4" required="required" class="form-control"
                                  name="projectdescription" data-parsley-trigger="keyup" data-parsley-minlength="20"
                                  data-parsley-maxlength="150"
                                  data-parsley-minlength-message="You need to enter at least a 20 characters long description.."
                                  data-parsley-validation-threshold="10"></textarea>
                    </div>
                    <!-- Skills required-->
                    <div class="col-md-6">
                        <label class="control-label">Skill Tags: *</label>
                        <select id="skills" class="form-control select-test" style="width: 100%;" multiple>
                            <optgroup label="Cyber Security">
                                <option value="Penetration Testing and Vulnerability">Penetration Testing and Vulnerability</option>
                                <option value="Scanning (Nesus and Qualys)">Scanning (Nesus and Qualys)</option>
                                <option value="Windows / Linux Security">Windows / Linux Security </option>
                                <option value="Database Security">Database Security</option>
                                <option value="Security Gap Assessments">Security Gap Assessments</option>
                                <option value="Cyber Threat Detection And Root Cause ">Cyber Threat Detection And Root Cause</option>
                                <option value="Analysis">Analysis</option>
                                <option value="Virtualisation Technologies">Virtualisation Technologies</option>
                                <option value="Strategic Management">Strategic Management</option>
                                <option value="Regulatory Compliance">Regulatory Compliance</option>
                                <option value="Risk Management">Risk Management</option>
                                <option value="IT Corporate Governance">IT Corporate Governance</option>
                                <option value="Data Centre Security">Data Centre Security</option>
                                <option value="Report Writing">Report Writing</option>
                                <option value="Policies, Procedures and Standards Writing skills">Policies, Procedures and Standards Writing skills</option>
                                <option value="Policies, Procedures and Standards Compliance Measurement"> Policies, Procedures and Standards Compliance Measurement</option>
                                <option value="IT Legislation Compliance Gap Assessments">IT Legislation Compliance Gap Assessments</option>
                            </optgroup>

                            <optgroup label="CIO Advisory">
                                <option value="IT Procurement and Bid Management">IT Procurement and Bid Management</option>
                                <option value="IT Governance and Service Management">IT Governance and Service Management</option>
                                <option value="IT Strategy and Performance Management">IT Strategy and Performance Management</option>
                                <option value="Enterprise Architecture and Design">Enterprise Architecture and Design</option>
                                <option value="Digitisation">Digitisation</option>
                            </optgroup>

                            <optgroup label="IT External Audit">
                                <option value="Specialist Supporting the Audit training">Specialist Supporting the Audit training</option>
                                <option value="Eaudit skills">Eaudit skills</option>
                                <option value="External Audit basics">External Audit basics</option>
                                <option value="General IT controls">General IT controls</option>
                            </optgroup>

                            <optgroup label="IT Internal Audit">
                                <option value="IT risk profiling">IT Risk Profiling</option>
                                <option value="Risk and compliance assessment">Risk and Compliance Assessment</option>
                                <option value="Application controls">Application Controls</option>
                                <option value="General IT controls">General IT Controls</option>
                                <option value="Report writing">Report Writing</option>
                                <option value="IT fraud investigation">IT Fraud Investigation</option>
                                <option value="Audit plan development">Audit Plan Development</option>
                                <option value="Eaudit skills">Eaudit skills</option>
                                <option value="ITIA basics">ITIA Basics</option>
                                <option value="SAP basics">SAP Basics</option>
                                <option value="IT assurance">IT Assurance</option>
                                <option value="King 3 Assessments">King 3 Assessments</option>
                                <option value="Data Migration Reviews">Data Migration Reviews</option>
                                <option value="User Account Testing">User Account Testing</option>
                            </optgroup>

                            <optgroup label="Data Analytics">
                                <option value="Data Analysis">Data Analysis</option>
                                <option value="Data Visualization">Data Visualization</option>
                                <option value="IDEA Skills">IDEA Skills</option>
                                <option value="Qlikview Skills">Qlikview Skills</option>
                                <option value="CAATS Basics Skills">CAATS Basics Skills</option>
                                <option value="Data Insight Detection">Data Insight Detection</option>
                                <option value="Report Writing">Report Writing</option>
                            </optgroup>

                            <optgroup label="TA Management">
                                <option value="Vendor Sourcing and RFP Development">Vendor Sourcing and RFP Development</option>
                                <option value="Vendor Contract Review">Vendor Contract Review</option>
                                <option value="Business Case Review">Business Case Review</option>
                                <option value="Project Assurance and Auditing">Project Assurance and Auditing</option>
                                <option value="Project Risk Management">Project Risk Management</option>
                                <option value="IT Strategy Development and Master Systems Plan">IT Strategy Development and Master Systems Plan</option>
                                <option value="IT Governance and Maturity Assessment">IT Governance and Maturity Assessment</option>
                                <option value="Data Migration">Data Migration</option>
                                <option value="Business Process Risk and Control Analysis In Erp Environments">Business Process Risk and Control Analysis In Erp Environments</option>
                                <option value="Automated Controls Testing">Automated Controls Testing</option>
                                <option value="Requirements Management">Requirements Management</option>
                                <option value="Blueprint / Process Design">Blueprint / Process Design</option>
                                <option value="Controls Integration">Controls Integration</option>
                                <option value="Master Data Management">Master Data Management</option>
                                <option value="Security and Sod">Security and Sod</option>
                                <option value="User Account Testing">User Account Testing</option>
                                <option value="Support Management">Support Management</option>
                                <option value="IT Service Management">IT Service Management</option>
                                <option value="Develop It Governance Frameworks">Develop IT Governance Frameworks</option>
                                <option value="IT Risks and Controls Assessments and Benchmarking">IT Risks and Controls Assessments and Benchmarking</option>
                                <option value="Review It Policies and Procedures">Review It Policies and Procedures</option>
                                <option value="Development of IT Strategies">Development of IT Strategies</option>
                                <option value="Value IT Analysis and Reviews">Value IT Analysis and Reviews</option>
                                <option value="It Governance Audits">IT Governance Audits</option>
                                <option value="King 3 Assessments">King 3 Assessments</option>
                                <option value="It Governance Maturity Reviews">IT Governance Maturity Reviews</option>
                                <option value="Vendor Selection Assistance">Vendor Selection Assistance</option>
                                <option value="It Project Assurance and Business Req Review">IT Project Assurance and Business Req Review</option>
                                <option value="Disaster Recovery Test Assist and Reviews">Disaster Recovery Test Assist and Reviews</option>
                                <option value="Project Management">Project Management</option>
                            </optgroup>

                        </select>
                    </div>

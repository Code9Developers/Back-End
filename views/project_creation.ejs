                                <button id="assignEmployees" type="button" class="btn btn-dark "><span
                                            class="fa fa-users"></span> Allocate Employees</button>
                            </span>
                    </div>
                </div>

                <!-- TODO show this table once button is clicked, hide div first-->
                <div id="EmpAllocationTableHide">
                    <div id="EmpAllocationDT">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Allocated Employees</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li style="float: right;"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div id="table_content" class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                 Below are the pre-selected employees that would best fit this project. Please select the employees you wish to replace and provide a reason for the replacement.
                                </p>
                                <table id="EmployeeAllocationDT" class="table table-striped table-bordered bulk_action">
                                    <thead>
                                    <tr>
                                        <th><div class="text-center"><i class="fa fa-times" aria-hidden="true"></i></div></th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Position</th>
                                        <th>Employment Length</th>
                                        <th>Skill</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

                <div id="EmpReplacementTableHide">
                    <div id="EmpReplacementDT">
                        <div class="x_panel">
                            <div id='employeeRemoveReason'>
                                <div>
                                    <label for='empRemoval'>Reason/s for removing employee: *</label>
                                    <textarea class='form-control' id='empRemoval' required='required' name='empRemoval'></textarea>
                                </div>
                            </div>
                            <div class="x_title">
                                <h2>Possible Replacement Employees</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li style="float: right;"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div id="table_content_Rep" class="x_content">
                                <p class="text-muted font-13 m-b-30">
                                    Below are the pre-selected employee replacements that would best fit this project. Please select the employee(s) you wish to add and provide a reason for the replacement.
                                </p>
                                <table id="EmployeeReplacementDT" class="table table-striped table-bordered bulk_action">
                                    <thead>
                                    <tr>
                                        <th><div class="text-center"><i class="fa fa-times" aria-hidden="true"></i></div></th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Position</th>
                                        <th>Employment Length</th>
                                        <th>Skill</th>
                                    </tr>
                                    </thead>
                                </table>
                                <div class='form-group'>
                                    <div>
                                        <select type='text' id='director_select' class='form-control'>
                                            <optgroup label='Director' id='director'>
                                                <option disabled selected>Select Director: *</option>
                                                </optgroup>
                                            </select>
                                    </div>
                                </div>
                                <br/>
                                <button id='removeEmployee' type='button' class='btn docs-tooltip btn-danger btn-round' data-toggle='tooltip' title='Remove selected employee/employees from project'>Remove Selection</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>


                <div class="row">
                    <!-- Project Owner Details-->
                    <div class="col-md-6">
                        <label for="projectowner">Project Owner: *</label>
                        <input type="text" id="projectowner" class="form-control" name="projectowner" required/>

                        <label for="projectowneremail">Project Owner Email: *</label>
                        <input type="email" id="projectowneremail" class="form-control" name="projectowneremail"
                               data-parsley-trigger="change" required/>

                        <label class="control-label">Contact Number: *</label>
                        <input type="text" id="ownercontact" class="form-control" data-inputmask="'mask' : '(999) 999 - 9999'"
                               data-parsley-trigger="change" required>
                    </div>
                </div>
                <br/>
                <hr/>
                <br/>
                <input id="createProjectbtn" type="button" class="btn btn-dark docs-tooltip" data-toggle="tooltip"
                       title="Confirm new project creation" value="Create Project">
            </form>
            <div class="row">
                <div style="margin-top: 300px" class="col-md-offset-4 col-md-4">
                    <div id="animation">
                        <div id="holder"></div>
                    </div>
                </div>
            </div>
            <!-- end form for validations -->
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
            <div class="pull-right">

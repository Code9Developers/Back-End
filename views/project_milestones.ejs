<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>KPMG | Milestones</title>

    <!-- Favicon -->
    <%- include('favicon'); %>

    <!-- Stylesheets -->
    <!-- Bootstrap -->
    <link href="vendors/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="vendors/font-awesome/css/font-awesome.min.css" type="text/css" rel="stylesheet">
    <!-- NProgress: Top load animation-->
    <link href="vendors/nprogress/nprogress.css" type="text/css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="stylesheets/custom.min.css" type="text/css" rel="stylesheet">
</head>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <!-- Sidebar -->
        <%- include('sidebar'); %>

        <!-- top navigation -->
        <%- include('top_nav'); %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
            <!--todo add project name to edit here-->
            <h3>Project Milestones
                <small>asd</small>
            </h3>
            <hr/>
            <div class="clearfix"></div>
            <!-- start form for validation -->
            <form id="demo-form" data-parsley-validate>
                <div class="row">
                    <div class="col-md-4">
                        <label for="milename">Milestone Name: *</label>
                        <input type="text" id="milename" class="form-control" name="milename" required/>
                    </div>
                    <div class="col-md-4">
                        <label>End Date: </label>
                        <input id="end_date_mile" class="form-control" type="date" required/>
                    </div>
                    <div class="col-md-4">
                        <input style="margin-top: 23px" id="createMile" class="btn btn-conf btn-dark docs-tooltip"
                               data-toggle="tooltip" title="Create Milestone" value="Create Milestone">
                    </div>
                </div>
            </form>
            <br/>
            <!-- end form for validations -->
            <div class="row">
                <div class="col-md-8">
                    <div id="echart_line" style="height:350px;"></div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Milestones</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="">
                                <ul class="to_do">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
            <div class="pull-right">
                Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
            </div>
            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>
</div>
<!--Vendors js files-->
<!-- jQuery -->
<script type="text/javascript" src="vendors/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap -->
<script type="text/javascript" src="vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Code 9 -->
<script type="text/javascript" src="vendors/Code-9/js/bottombar.js"></script>
<script type="text/javascript" src="vendors/Code-9/views/milestones.js"></script>
<!-- FastClick: Increase load time-->
<script type="text/javascript" src="vendors/fastclick/lib/fastclick.js"></script>
<!-- NProgress: Top load animation-->
<script type="text/javascript" src="vendors/nprogress/nprogress.js"></script>
<!-- Parsley -->
<script type="text/javascript" src="vendors/parsleyjs/dist/parsley.min.js"></script>
<!-- ECharts -->
<script type="text/javascript" src="vendors/echarts/dist/echarts.js"></script>

<!-- Custom Theme Scripts -->
<script type="text/javascript" src="javascripts/custom.min.js"></script>
</body>
</html>

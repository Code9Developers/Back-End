<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>KPMG | Milestone</title>

    <!-- Favicon -->
    <%- include('favicon'); %>

    <!-- Stylesheets -->
    <%- include('stylesheets'); %>
</head>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <!-- Sidebar -->
        <%- include('sidebar'); %>

        <!-- top navigation -->
        <%- include('top_nav'); %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
            <!--todo add project name to edit here-->
            <h2>Project Milestones<small id="project-name">&nbsp;&nbsp;&nbsp; </small></h2>
            <hr/>
            <div class="clearfix"></div>
            <!-- start form for validation -->
            <form id="demo-form" data-parsley-validate>
                <div class="row">
                    <div class="col-md-4">
                        <label for="milename">Milestone Name: *</label>
                        <input type="text" id="milename" class="form-control" name="milename" required />
                    </div>
                    <div class="col-md-4">
                        <label>End Date: </label>
                        <input id="end_date_mile" class="form-control" type="date" required/>
                    </div>
                    <div class="col-md-4">
                        <input style="margin-top: 23px" id="createMile" class="btn btn-conf btn-dark docs-tooltip" data-toggle="tooltip" title="Create Milestone" value="Create Milestone">
                    </div>
                </div>
            </form>
            <br/>
            <!-- end form for validations -->
            <div class="row">
                <div class="col-md-8">
                    <div id="echart_line" style="height:350px;"></div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Milestones</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="">
                                <ul class="to_do">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
            <div class="pull-right">
                Gentelella - Bootstrap Admin Template by <a href="https://colorlib.com">Colorlib</a>
            </div>
            <div class="clearfix"></div>
        </footer>
        <!-- /footer content -->
    </div>
</div>
<!--Vendors js files-->
<script src="vendors/Code-9/views/milestones.js"></script>
<%- include('javascripts'); %>

</body>
</html>

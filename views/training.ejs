<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <!-- Sidebar -->
        <%- include('sidebar'); %>

        <!-- top navigation -->
        <%- include('top_nav'); %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
            <!--todo add project name to edit here-->
            <h2>Training
                <small id="project-name"> </small>
            </h2>
            <hr/>
            <div class="clearfix"></div>
            <form id="demo-form" data-parsley-validate >
                <div class="row">
                    <div class="col-md-6">
                        <label for="trainerName">Trainer's Name: *</label>
                        <input type="text" id="trainerName" class="form-control" name="trainerName"/>

                        <label for="trainerEmail">Trainer's Email: *</label>
                        <input type="email" id="trainerEmail" class="form-control" name="trainerEmail"/>

                        <label for="trainerPhoneNumber">Trainer's Phone Number: *</label>
                        <input type="text" class="form-control" id="trainerPhoneNumber" name="trainerPhoneNumber" data-inputmask="'mask' : '(999) 999 - 9999'"
                               data-parsley-trigger="change" required>
                    </div>
                    <div class="col-md-6">
                        <label for="startDate">Start Date: *</label>
                        <input type="date" id="startDate" class="form-control" name="startDate" required/>

                        <label for="endDate">End Date: *</label>
                        <input type="date" id="endDate" class="form-control" name="endDate" required/>
                    </div>
                </div>

                <br/>
                <!-- TODO show this table once button is clicked-->

                <div id="EmpTrainingAllocationTableHide">
                    <div id="EmpTrainingAllocationDT">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>All Employees</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li style="float: right;"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div id="table_content"class="x_content">
                                <table id="EmployeeTrainingAllocationDT" class="table table-striped table-bordered bulk_action">
                                    <thead>
                                    <tr>
                                        <th><input name="select_all" value="1" type="checkbox"></th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Position</th>
                                        <th>Employment Length</th>
                                        <th>Email</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- TODO Table end-->
                <input id="addTraining"  class="btn btn-dark docs-tooltip" data-toggle="tooltip" title="Add Training" type="submit"  value="Add Training"/>
            </form>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <footer>
            <div class="pull-right">
